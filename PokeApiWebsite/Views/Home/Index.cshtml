@model PokedexEntryViewModel
@{
	ViewData["Title"] = "Pokedex Entry for " + Model.Name; ;
}

<h2>Pokedex Entry</h2>
<img src="@Model.PokeDexImageUrl" alt="Picture of @Model.Name" />
<h3>@Model.Name</h3>
<p>
	Weight: @Model.Weight pounds<br />
	Height: @Model.Height inches<br />
</p>

<h4>Move List</h4>
<ul>
	@foreach (string move in Model.MoveList)
	{
		<li>@move</li>
	}
</ul>

@{
	int prevPage = Convert.ToInt32(ViewData["Id"]) - 1;
	int nextPage = Convert.ToInt32(ViewData["Id"]) + 1;
	int wrapToFront = 1;
	int rollBack = 807;
}

@if (prevPage >= 1)
{
	<a asp-action="index" asp-route-id="@prevPage" class="btn btn-primary">Prev</a>
}
else
{
	<a asp-action="index" asp-route-id="@rollBack" class="btn btn-primary">Prev</a>
}

@if (nextPage <= 807)
{
	<a asp-action="index" asp-route-id="@nextPage" class="btn btn-primary">Next</a>
}
else
{
	<a asp-action="index" asp-route-id="@wrapToFront" class="btn btn-primary">Next</a>
}
